{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@koalarx/ui/alert": [
        "dist/alert"
      ],
      "@koalarx/ui/button": [
        "dist/button"
      ],
      "@koalarx/ui/core": [
        "dist/core"
      ],
      "@koalarx/ui/dialog": [
        "dist/dialog"
      ],
      "@koalarx/ui/dynamic-component": [
        "dist/dynamic-component"
      ],
      "@koalarx/ui/file-button": [
        "dist/file-button"
      ],
      "@koalarx/ui/folder-page": [
        "dist/folder-page"
      ],
      "@koalarx/ui/form": [
        "dist/form"
      ],
      "@koalarx/ui/icon": [
        "dist/icon"
      ],
      "@koalarx/ui/icons-animated": [
        "dist/icons-animated"
      ],
      "@koalarx/ui/list": [
        "dist/list"
      ],
      "@koalarx/ui/menu": [
        "dist/menu"
      ],
      "@koalarx/ui/question": [
        "dist/question"
      ],
      "@koalarx/ui/snackbar": [
        "dist/snackbar"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}
