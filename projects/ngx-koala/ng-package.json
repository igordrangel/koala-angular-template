    "theme/koala.theme.css"
  ],
  "lib": {
    "entryFile": "src/public-api.ts",
    "umdModuleIds": {
      "jwt-decode": "jwt-decode",
      "ng2-currency-mask": "ng2-currency-mask",
      "ngx-device-detector": "i2",
      "jwt-encode": "jwtEncode",
